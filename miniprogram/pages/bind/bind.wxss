/* pages/bind/bind.wxss */


form {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: center;
}

.input-group {
  display: flex;
  align-items: center;
  padding: 25rpx 10rpx;
  margin: 40rpx 3%;
  border-radius: 5px;
  border: 1px solid #a9a9a9;
  transition: all .25s ease-in-out;

}



.input-label {
  color: rgb(124, 124, 124);
  font-size: 33rpx;
  height: 25rpx;
  line-height: 25rpx;
  padding: 0 25rpx;
  border-right: 1px solid #949494;
}

.input-group input,
.input-group picker {
  flex: 1;
  font-size: 33rpx;
  min-height: 52rpx;
  height: 52rpx;
  line-height: 52rpx;
  padding: 0 25rpx;
}

.input-placeholder,
.input-group picker.placeholder {
  color: rgb(142, 142, 142);
}

.regisandhelp {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.register {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 0 30rpx;
  font-size: 11pt;
  font-weight: bold;
  color: #5e5e5e;
}

.login-help {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 0 30rpx;
  font-size: 11pt;
  color: rgb(135, 135, 135);
}

.confirm-btn {
  font-size: 13pt;
  line-height: 85rpx;
  height: 85rpx;
  background: #ff9696;
  color: #fff;
  text-align: center;
  border-radius: 5px;
  margin: 50rpx 3%;
}

.passenger-btn {
  font-size: 13pt;
  line-height: 85rpx;
  height: 85rpx;
  background: #684141;
  color: #fff;
  text-align: center;
  border-radius: 5px;
  margin: 0 3%;
  opacity: 0.5;
}


.help {
  position: fixed;
  z-index: 100;
  top: 20%;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}


.box {
  background-color: #fff;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  width: 80%;
  border-radius: 10px;
  box-shadow: 0 0 20px rgb(63, 63, 63);
  transform: translate3d(0, -400rpx, 0);
}

.box-hd {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  border-bottom: 1px solid rgb(255, 255, 255);
}

.box-title {
  font-size: 14pt;
  font-weight: bolder;
}

.box-close {
  position: absolute;
  right: 20rpx;
  width: 45rpx;
  height: 45rpx;
  padding: 15rpx;
}

.box-bd {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 40rpx;
  padding-bottom: 40rpx;
}

.help-q {
  font-size: 12pt;
  line-height: 200%;
  font-weight: bolder;
  margin-top: 7rpx;
}

.help-a {
  color: rgb(107, 107, 107);
  font-size: 11pt;
  text-indent: 1em;
  line-height: 160%;
}

.help-a text {
  word-break: break-all;
}

.help-b {
  border: #4e4e4e solid 1rpx;
  font-size: 10pt;

}
