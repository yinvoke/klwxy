  border-radius: 30rpx;
  background-color: gray;
}


.card {
  min-height: 150rpx;
  color: #504e4e;
  font-size: 30rpx;
  min-height: 200rpx;
  margin: 30rpx;
  border: solid 1rpx #f8f8f8;
  border-radius: 30rpx;
  box-shadow: 0 1px 8px 0 rgba(232, 232, 232, 0.878), 0 3px 3px 0 rgba(233, 233, 233, 0.892);
  overflow-y: scroll;
}

.card .title {
  padding: 5rpx 15rpx;
  margin: 20rpx 0 10rpx 0;
  display: flex;
  justify-content: space-between;
  font-weight: bolder;
  font-weight: bolder;
}

.card .content {

  padding: 10rpx 20rpx 20rpx 20rpx;
  display: flex;
  align-items: center;
}
