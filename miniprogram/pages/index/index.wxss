/**index.wxss**/
.background {
  height: 250rpx;
  position: absolute;
  width: 100%;
  background-color: #4e4e4e;
  z-index: -100;
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
}

.updatetip {
  position: fixed;
  background-color: white;
  z-index: 9999;
  margin: 0 100rpx;
  margin-top: 300rpx;
  min-height: 550rpx;
  border: solid 8rpx #fea641;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  justify-items: center;
  align-items: center;
  box-shadow: 2rpx 3rpx 8rpx #504e4e;
}

.tiptitle {
  font-size: 40rpx;
  font-weight: 700;
  padding: 25rpx 0 20rpx 0;
}

.version {
  margin-bottom: 15rpx;
  font-size: 28rpx;
  color: #504e4e;
}

.tipcontent {
  font-size: 35rpx;
  text-indent: 1em;
  padding: 15rpx 20rpx;
  color: #292929;
  line-height: 45rpx;
}

.updatetip image {
  width: 150rpx;
  height: 150rpx;
}

.jumpproduct {
  margin: 35rpx 80rpx 20rpx 80rpx;
  padding: 7rpx 0;
  font-size: 28rpx;
  color: #eea916;
  font-weight: bold;
  border: #eea916 solid 2rpx;
  border-radius: 20rpx;
  text-align: center;
}

.close {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

/**轮播**/
.main-coverImgs {
  margin-bottom: 20rpx;
  width: 100%;
  height: 310rpx;
}

.coverImgs {
  width: 100%;
  height: 100%;
}

.coverImgs image {
  margin: 0 30rpx;
  width: 690rpx;
